<!DOCTYPE html>
<html>
    <%- include ('partials/header.ejs'); %>   
   
    <body>
      <%- include ('partials/navbar.ejs'); %>
      <div class="container">
        <h1><%= perguntas.titulo %> </h1>
        <p> <%= perguntas.desc %></p>
      </div>
      <form method ="POST" action="/salvaresposta">
        <textarea name="resp" class="form-control" placeholder="Resposta"></textarea><br>
        <input type ="hidden" name="perg" value ="<%= perguntas.id  %>">
       <button type="submit"  class =" btn btn-primary "> Responder</button>
    
      </form>
      <hr>
      <h3>Respostas</h3>
      <hr>
      <% respostas.forEach(respostas=> {%>
        <br>
        <div class="card">
    
          <div class="card-body">
            <%= respostas.resp %>
          </div>
        </div>
      <% }) %>

    </body>

    <%- include ('partials/footer.ejs'); %>
    </html>